<% content_for :title,@title %>
<div class="row-fluid">
  <div id="search_form" class="span3">
    <%= render 'cars/partials/search_form' %>
  

  </div><!--/span-->
  <div id="search_results" class="span9">
  
    <% if @vehicles %>
    <div class="row-fluid">
     <div class="span12">
       <div class="search_preloader"></div>
      <div class="paginator">
        <%= render 'vehicles/partials/paginator' %>
      </div>
    </div>
  </div>
      <div class="row-fluid">
        <div class="span8">
          <div class="page_entries_info">
            <%= render 'vehicles/partials/page_entries_info' %>
          </div>
        </div>
      
        <div class="span4">
          <% if @vehicles.count>1 %>
            <div  class="sort_dropdown text-right hidden-phone">
              <%= render 'vehicles/partials/dropdown' %>
            </div>
            <div  class="sort_dropdown text-left visible-phone">
              <%= render 'vehicles/partials/dropdown' %>
            </div>
          <% end %>
        </div>
      </div>
     
      <div id="vehicles">
        <%= render 'vehicles/partials/vehicles',vehicles: @vehicles,version: "big" %>
      </div>
  
      <% if @vehicles.count>4 %>
       <div class="row-fluid">
      <div class="span12">
        <div class="page_entries_info">
          <%= render 'vehicles/partials/page_entries_info' %>
        </div>
      </div>
    </div>
     <div class="row-fluid">
      <div class="span12">
        <div class="paginator">
          <%= render 'vehicles/partials/paginator' %>
        </div>
      </div>
    </div>
      <% end %>
    <% else %>
      <div class='alert'><%= t("adverts.index.nothing") %></div>
    <% end %>
  </div><!--/span-->
</div><!--/row-->

<div class="row-fluid hidden-phone">
<div class="span12">
 <ul class="nav nav-tabs" id="moreTabInSearch">
      <li><a href="#viewed_by_you" data-toggle="tab"><%= t("vehicles.search.viewed_by_you") %></a></li>    
    </ul>
    <div id="moreTabInSearchContent" class="tab-content">
      <div class="tab-pane fade" id="viewed_by_you">
      <div id="recently_viewed_vehicles" class="text-center"><%= image_tag "/ajax-loader.gif" %></div>
      </div>
    </div>
  </div>
   </div>
  