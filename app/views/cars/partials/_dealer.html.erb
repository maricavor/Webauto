
 <div class="row-fluid">
     <div class="span3">
       <% picture=dealer.dealer_picture  %>
            <% if picture %>
                   
      
      <%= image_tag(picture.file_url(:thumb),:style=>"margin-bottom:10px;") %>
   
    
     <% end %>
     </div>
          <div class="span7">


     <address>
  <strong>  <%= dealer.company_name %></strong><br>
   <%= "#{dealer.address1}, #{dealer.city_name}, #{dealer.postal_code}" %><br>
    <%= "#{dealer.country_name}, #{dealer.state_name}" %><br>
   <abbr title="Phone">P:</abbr>
                   <span id="primary_phone"><%= dealer.primary_phone %><%= " ,#{dealer.secondary_phone}" if dealer.secondary_phone!="" %></span>
                  
              

               
 
</address>
    <%= link_to ("<i class='icon-envelope'></i> Email the Dealer").html_safe, "#contactModal",:'data-toggle'=>"modal",:class=> "btn btn-small" %><%= link_to ("<i class='icon-home'></i> Visit Website").html_safe,http_url(dealer.webpage),:class=> "btn btn-small",:style=>"margin-left:5px;",:target=>"_blank" if dealer.webpage.present? %><%= link_to ("<i class='icon-map-marker'></i> View Map").html_safe,"http://maps.google.com/?q=#{dealer.full_address}",:class=> "btn btn-small",:target=>"_blank",:style=>"margin-left:5px;" %>
     </div>
       <div class="span2">
       <p class="lead muted text-center hidden-phone">
      Total Stock <br>
              <%= dealer.adverts.where(:activated=>true).count %>
            </p>
     </div>
     </div>
  
 
  
  