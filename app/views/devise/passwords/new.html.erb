<div class="row-fluid">
  <div class="span12">
      <div class="page-header">
      <h2><%= t("signin.forgot_password") %></h2>
    </div>
    </div>
    </div>
<div class="row-fluid">
    <div class="span6 well">
<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post,:class=>"form-vertical" }) do |f| %>
 
   <p class="lead"><%= t("signin.forgot_password_note") %></p>
<%= f.input :email, :label => t("signin.email") %>
  <br />
 <%= f.button :submit, t("signin.send"), :class => 'btn btn-primary' %>


<% end %>
<%= render "devise/shared/links" %>
</div>
    <div class="span6">
    </div>
</div>


