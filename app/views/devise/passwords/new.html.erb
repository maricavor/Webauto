<div class="row-fluid">
  <div class="span12">
      <div class="page-header">
      <h2><%= t("signin.forgot_password") %></h2>
    </div>
    
    </div>
    </div>
<div class="row-fluid">
    <div class="span5 well">
     <p class="lead"><%= t("signin.forgot_password_note") %></p>
     <%= vehicle_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html=>{:method => :post,:class=>"form-vertical"}) do |f| %>

 
  
    <%= f.text_field :email,:label => t("signin.email") %>
   <div style="padding-top:20px;">
      <%= f.submit t("signin.send"),:class=>"btn btn-info" %>
      </div>



<% end %>
<%= render "devise/shared/links" %>
</div>
    <div class="span7 text-center">
  <br /><br />
 <h3><%= t("signin.new_to")  %></h3>
 <p><%= t("signin.get_started") %></p>
 <%= link_to t("navigation.register"), new_registration_path(resource_name),:class => 'btn btn-info' %>
  </div>
</div>


