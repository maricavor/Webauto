<div class="row-fluid">
  <div class="span12">
      <div class="page-header">
      <h2><%= t("signin.forgot_password") %></h2>
    </div>
     <p class="lead"><%= t("signin.forgot_password_note") %></p>
    </div>
    </div>
<div class="row-fluid">
    <div class="span6 well">
     <%= vehicle_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html=>{:method => :post,:class=>"form-vertical"}) do |f| %>

 
  
    <%= f.text_field :email,:label => t("signin.email") %>
   <div style="padding-top:20px;">
      <%= f.submit t("signin.send"),:class=>"btn btn-primary" %>
      </div>



<% end %>
<%= render "devise/shared/links" %>
</div>
    <div class="span6">
    </div>
</div>


