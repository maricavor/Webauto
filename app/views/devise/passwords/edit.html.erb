<div class="row-fluid">
  <div class="span12">
      <div class="page-header">
      <h2><%= t("signin.forgot_password") %></h2>
    </div>
    </div>
    </div>
<div class="row-fluid">
  <div class="span6 well">
    <%= vehicle_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html=>{:method => :put,:class=>"form-vertical"}) do |f| %>

      <%= f.hidden_field :reset_password_token %>
      <%= f.password_field :password, :label=> "New password" %>
      <%= f.password_field :password_confirmation, :label => "Password confirmation" %>
    
     <div style="padding-top:20px;">
      <%= f.submit t("signin.change_password"),:class=>"btn btn-primary" %>
      </div>

      
    <% end %>

  </div>
  <div class="span6">
  </div>
</div>