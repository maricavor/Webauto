<% content_for :title,@title %>
<div class="row-fluid">
  <div class="span12">
    <div class="page-header">
      <h2>Create an account</h2>
    </div>
    </div>
    </div>
<div class="row-fluid">
  <div class="span6 well">
     <p>Before you can begin selling, we need some information about you.</p>
    <%= vehicle_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html=>{:class=>"form-vertical",:remote=>false}) do |f| %>  
       
          <%= f.text_field :email, :label => "Email" %>
         
          <% if resource.password_required? %>
          <%= f.password_field :password, :label => "Password" %>
          <%= f.password_field :password_confirmation, :label => "Password confirmation" %>
          <% end %>
          <%= f.check_box :is_dealer,label: "Are you a dealer/company?" %>
          <fieldset class="dealer_data">
            <%= f.text_field :company_name,:label=>"Company name" %>
            <%= f.text_field :address1,:label=>"Address 1" %>
            <%= f.text_field :address2,:label=>"Address 2" %>
            
             <%= f.select :country_id,Country.order(:name).collect {|p| [ p.name, p.id ] },{include_blank: true},{:label=>t("users.profile.country"),:id=>"vehicle_country_id" }%>
             <%= f.select :state_id,State.order(:name).collect {|p| [ p.name, p.id ] },{},{:label=>t("users.profile.state"),:id=>"vehicle_state_id"} %>
               <%= f.select :city_id,City.order(:name).collect {|p| [ p.name, p.id ] },{},{:label=>t("users.profile.city"),:id=>"vehicle_city_id"} %>
           
            <%= f.text_field :postal_code,:label=>"Postal code" %>
            <%= f.text_field :company_reg,:label=>"Registration code" %>
            <%= f.text_field :company_kmkr,:label=>"VAT payer number" %>
            <%= f.text_field :phone1,:label=>"Phone" %>
            <%= f.text_field :webpage,:label=>"Webpage" %>
          </fieldset>
          <%= f.check_box :tos_agreement,label: "I accept the <a href='#{terms_path}' target='_blank'>terms</a> and <a href='#{privacy_path}' target='_blank'>privacy policy</a>".html_safe %>

    
    <div style="padding-top:20px;">
      <%= f.submit "Sign up",:class=>"btn btn-primary" %>
      </div>
    
     
    <% end %>
     <%= render "devise/shared/links" %>
  </div>
     <div class="span6 text-center">
  <br /><br />
 <h3>Spam Protection</h3>
 <p>To protect you from unsolicited email (spam), your email address will not be displayed on your advert. If you allow contact by email, buyers will be able to send you messages through our system. The buyer will not see your email address unless you choose to reply to them.</p>

  </div>
</div>