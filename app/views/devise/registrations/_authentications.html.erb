  <% unless authentications.empty? %>
 <div class="row-fluid">
 <div class="span12">
<p><strong>You can sign in to your account using:</strong></p>
    <% for authentication in authentications %>
     <div class="authentication" id="<%= authentication.provider.to_s.downcase %>_auth">
     <%= image_tag("/#{authentication.provider.to_s.downcase}.png", :border => 0,:size=>"32x32") %>
      <div class="provider">  <%= authentication.provider_name %></div>
      <div class="uid"><%= authentication.uid %></div>
      <% if authentications.count>1 %>
       <%= link_to "&#215;".html_safe, authentication, :confirm => 'Are you sure you want to remove this authentication option?', :method => :delete, :class => "remove",:remote=>true %>
       <% else %>
       <% if !current_user.encrypted_password.blank? %>
       <%= link_to "X", authentication, :confirm => 'Are you sure you want to remove this authentication option?', :method => :delete, :class => "remove",:remote=>true %>
       <% end %>
       <% end %>
     </div>
     <% end %>

      </div>
       </div>
  <% if authentications.count < User.omniauth_providers.count %>
   <div class="row-fluid">
 <div class="span12">
   <p><strong>Add more services to sign in with:</p>
      </div>
       </div>
   <% end %>
<% else %>
   <div class="row-fluid">
 <div class="span12">
   <p><strong>Add service to sign in with:</p>
      </div>
       </div>


       <% end %>
        