<div class="row-fluid">
  <div class="span12">
    <%= render 'adverts/partials/breadcrumb',:step=>@action %>
    <div class="page-header">
      <h2><%= t("adverts.features.title") %></h2>
    </div>
  
  </div>
</div>
<div class="row-fluid">
<%= vehicle_form_for @advert, :html=>{:class=>"form-vertical"},:authenticity_token => true,:remote=>false do |f| %>
  <%= f.error_messages %>
  <%= f.fields_for :vehicle do |vehicle_fields| %>


  
  <%= render 'adverts/partials/features_form',:f=>vehicle_fields %>
 
  
 
 <% end %>
   <%= f.hidden_field :features_saved,value: true %>
<div class="row-fluid">
  	  <div class="span12">
  <%= render 'adverts/partials/actions',:f=>f %>
  </div>
</div>
<% end %>