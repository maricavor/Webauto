<div class="row-fluid">
<div class="span12 alert alert-info">
NB! This is a preview of your advert #<%= @advert.uid  %>.
</div>
</div>
<div class="row-fluid">
<div class="span3">
<%= link_to "Back".html_safe, :back,:class=> "btn btn-small" %>
</div>
<div class="span9">
  <div class="text-right hidden-phone">
  <%= render 'vehicles/partials/custom_breadcrumb' %>
</div>
  <div class="text-left visible-phone">
   <%= render 'vehicles/partials/custom_breadcrumb' %>
</div>
</div>
</div>
<div class="row-fluid page-header">
  <div class="span9">
    <h2> 
      <%= "#{@vehicle.registered_at.strftime('%Y')} #{@make_name} #{@model_name}"  %>
      <small class="hidden-phone">
        <%= "#{@vehicle.badge}" %>
      </small>
      </h2>
  </div>

    <div class="span3">
    <h2 class="text-right hidden-phone text-success" style="line-height: 0.7;"><small><s><%= "#{currency(@vehicle.previous_price)}" %></s></small> <%= "#{currency(@vehicle.price)}" %><br><small><%= @vehicle.price_vat ? t("vehicles.show.incl_vat") : t("vehicles.show.exl_vat") %></small></h2>
  
    <h2 class="text-left visible-phone text-success" style="line-height: 0.7;"><%= "#{currency(@vehicle.price)} " %><small><s><%= "#{currency(@vehicle.previous_price)}" %></s></small><br><small><%= @vehicle.price_vat ? "inc 20% VAT" : "exl 20% VAT" %></small></h2>
  
  </div>

</div>
<div class="row-fluid">
  <div class="span6">
    <span class="label"><%= "##{@advert.uid}" %></span>
  </div>
  <div class="span6 text-left visible-phone">
  <span class="label"><%= @user.is_dealer ? "Dealer" : "Private"  %></span>
  </div>
  <div class="span6 text-right hidden-phone">
   <span class="label"><%= @user.is_dealer ? "Dealer" : "Private"  %></span>
  </div>
</div>
<div class="row-fluid">
  <div class="span5">
    <div id="gallery" data-toggle="modal-gallery" data-target="#modal-gallery" >
      <%= render 'vehicles/partials/pictures' %>
      <%= render 'vehicles/partials/blueimp-gallery' %>
    </div>
    <%= render "vehicles/partials/contact",:mode=>"preview" %>
    
    
  </div>
  <div class="span7">
    <%= render "vehicles/partials/general_info" %>
    <blockquote>
      <p style="font-size:14px;"><%= @vehicle.description %></p>
    </blockquote>
    <ul class="nav nav-tabs" id="vehicleTab">
      <li class="active"><a href="#specs" data-toggle="tab">Specification</a></li>
      <li><a href="#features" data-toggle="tab">Features</a></li>
    </ul>
    <div id="myVehicleTabContent" class="tab-content">
      <div class="tab-pane fade in active" id="specs"><%= render "vehicles/partials/specs" %></div>
      <div class="tab-pane fade" id="features"><%= render "vehicles/partials/features" %></div>
    </div>
  </div>
 
</div>



    