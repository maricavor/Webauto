<% content_for :title,@title %>
<div class="row-fluid">
  <div class="span12">
    <%= render 'adverts/partials/breadcrumb',:step=>@action %>
    <div class="page-header">
      <h2><%= t("adverts.edit.title") %></h2>
    </div>
    </div>
</div>
<%= vehicle_form_for @advert, :html=>{:class=>"form-vertical"},:authenticity_token => true,:remote=>false do |f| %>
<%= f.hidden_field :user_id,value: current_user.id %>
<%= f.hidden_field :ad_type,value: @ad_type %>
<%= f.hidden_field :basics_saved,value: true %>
<%= f.hidden_field :type_id,value: @current_type.id %>
  <div class="row-fluid">
  <%= f.fields_for :vehicle do |vehicle_fields| %>
  
    <%= render 'adverts/partials/new_edit_form',:f=>vehicle_fields %>
<% end %>
</div>
 

  <div class="row-fluid" >
      <div class="span12">
   <%= render 'adverts/partials/actions',:f=>f %>
     
  </div>
</div>
<% end %>