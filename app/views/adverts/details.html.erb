<div class="row-fluid">
  <div class="span12">
    <%= render 'adverts/partials/breadcrumb',:step=>@action %>
    <div class="page-header">
      <h2>
        <%= t("adverts.details.title",:vehicle=>@vehicle.make_model) %></h2>
    </div>
   
  </div>
</div>
<%= vehicle_form_for @advert, :html=>{:class=>"form-vertical"},:authenticity_token => true,:remote=>false do |f| %>
  <%= f.error_messages %>
    <div class="row-fluid">
  <%= f.fields_for :vehicle do |vehicle_fields| %>
    <%= render 'adverts/partials/details_form',:f=>vehicle_fields %>
 <% end %>
  <%= f.hidden_field :details_saved,value: true %>
  </div>
<div class="row-fluid">
  	  <div class="span12">

     <%= render 'adverts/partials/actions',:f=>f %>
  </div>
</div>
<% end %>
