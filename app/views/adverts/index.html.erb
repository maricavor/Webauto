<% content_for :title,@title %>
<div class="row-fluid">
  <div class="span3">
    <%= render 'users/well',:active=>"ads" %>
  </div>
  <div class="span9">
    <div class="search_preloader"></div>
    <div class="page-header">
      <h2><%= t("adverts.index.ad_management") %></h2>
    </div>
    <% if @adverts.count>0 %>
      <div class="paginator">
        <%= render 'adverts/partials/paginator' %>
      </div>
      <div class="row-fluid">
        <div class="span6">
          <div class="page_entries_info">
            <%= render 'adverts/partials/page_entries_info' %>
          </div>
        </div>
        <div class="span2">
          </div>
        <div class="span4">
          <div  class="sort_dropdown text-right hidden-phone">
            <%= link_to ("<i class='icon-plus icon-white'></i> #{t('adverts.index.create_ad')}").html_safe, new_advert_path,:class=> "btn btn-info" %>
          </div>
          <div  class="sort_dropdown text-left visible-phone">
            <%= link_to ("<i class='icon-plus icon-white'></i> #{t('adverts.index.create_ad')}").html_safe, new_advert_path,:class=> "btn btn-info" %>
          </div>
        </div>
      </div>
      <div id="ads">
        <%= render 'adverts/partials/ads',adverts: @adverts %>
      </div>
      <div id="statisticsModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="statisticsModalLabel" aria-hidden="true"></div>
      <% if @adverts.count>5 %>
        <div class="page_entries_info">
          <%= render 'adverts/partials/page_entries_info' %>
        </div>
        <div class="paginator">
          <%= render 'adverts/partials/paginator' %>
        </div>
      <% end %>
    
      
    <% end %>
  </div>
</div>
