<% content_for :title,@title %>
<div class="row-fluid">
  <div class="span3">
    <%= render 'well',:active=>"ads" %>
  </div>
  <div class="span9">
    <div class="page-header">
      <h2>Ad Management</h2>
    </div>
    <% if @vehicles %>
      <div class="paginator">
        <%= render 'vehicles/partials/paginator' %>
      </div>
      <div class="row-fluid">
        <div class="span6">
          <div class="page_entries_info">
            <%= render 'vehicles/partials/page_entries_info' %>
          </div>
        </div>
        <div class="span2">
          <div class="preloader"></div></div>
        <div class="span4">
          <div  class="sort_dropdown text-right hidden-phone">
            <%= link_to '<i class="icon-plus icon-white"></i> Create Ad'.html_safe, sell_vehicle_url,:class=> "btn btn-info" %>
          </div>
          <div  class="sort_dropdown text-left visible-phone">
            <%= link_to '<i class="icon-plus icon-white"></i> Create Ad'.html_safe, sell_vehicle_url,:class=> "btn btn-info" %>
          </div>
        </div>
      </div>
      <div id="ads">
        <%= render 'users/ads',vehicles: @vehicles %>
      </div>
      <% if @vehicles.count>5 %>
        <div class="page_entries_info">
          <%= render 'vehicles/partials/page_entries_info' %>
        </div>
        <div class="paginator">
          <%= render 'vehicles/partials/paginator' %>
        </div>
      <% end %>
    <% else %>
      <div class='alert'>Nothing found</div>
    <% end %>
  </div>
</div>