<% content_for :title,@title %>
<div class="row-fluid">
  <div class="refine_search span3 well well-small">
    <h4>Refine Search</h4>
    <%= render 'vehicles/partials/tools_search'%>
    <%= render partial: 'searches/saveSearchModal',locals: {mode: "new"} if current_user %>
    <%= render 'vehicles/partials/accordion'%>
  </div><!--/span-->
  <div class="span9">
    <% if @vehicles %>
  
      <div class="paginator">
        <%= render 'vehicles/partials/paginator' %>
      </div>
      <div class="row-fluid">
        <div class="span6">
          <div class="page_entries_info">
            <%= render 'vehicles/partials/page_entries_info' %>
          </div>
        </div>
        <div class="span2">
          <div class="preloader"></div></div>
        <div class="span4">
          <% if @vehicles.count>1 %>
            <div  class="sort_dropdown text-right hidden-phone">
              <%= render 'vehicles/partials/dropdown' %>
            </div>
            <div  class="sort_dropdown text-left visible-phone">
              <%= render 'vehicles/partials/dropdown' %>
            </div>
          <% end %>
        </div>
      </div>
      <div id="vehicles">
        <%= render 'vehicles/partials/vehicles',vehicles: @vehicles %>
      </div>
      <% if @vehicles.count>4 %>
        <div class="page_entries_info">
          <%= render 'vehicles/partials/page_entries_info' %>
        </div>
        <div class="paginator">
          <%= render 'vehicles/partials/paginator' %>
        </div>
      <% end %>
    <% else %>
      <div class='alert'>Nothing found</div>
    <% end %>
  </div><!--/span-->
</div><!--/row-->