
 <div class="row-fluid" style="margin-bottom:10px;">
 <div class="span6">
<%= link_to ("<i class='icon-cars'></i> "+t("vehicles.show.compare")).html_safe, compare_car_path(@vehicle),:class=> "btn btn-block",:remote=>true %>

<%= save_vehicle_button %>
<%= link_to ("<i class='icon-envelope'></i> "+t("vehicles.show.share")).html_safe, "#sendToFriendModal",:class=> "btn btn-block",:role=>"button",:'data-toggle'=>"modal" %>
</div>
 <div class="span6">
<%= link_to ("<i class='icon-bullhorn'></i> "+t("vehicles.show.report")).html_safe, "#reportAdModal",:class=> "btn btn-block",:role=>"button",:'data-toggle'=>"modal" %>
<%= link_to ("<i class='icon-comment'></i> "+t("vehicles.show.comments")+" [#{@vehicle.comments.count}]").html_safe, "#commentsModal",:class=> "btn btn-block",:role=>"button",:'data-toggle'=>"modal" %>

<% if current_user==@vehicle.user %>
<%= link_to 'Edit', edit_advert_path(@vehicle.advert),:class=> "btn btn-block" %>
<%= link_to 'Remove Ad', @vehicle.advert, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger btn-block" %>
<% end %>

</div>
</div>