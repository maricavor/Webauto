$('#vehicle_state_id').html("<%= escape_javascript(options_for_select(@states)) %>");
$('#vehicle_city_id').html("<%= escape_javascript(options_for_select(@cities)) %>");
if ($('#vehicle_state_id').has('option').length > 0) {
    $('#vehicle_state_id').show();

} else {
    $('#vehicle_state_id').hide();

}
if ($('#vehicle_city_id').has('option').length > 0) {
    $('#vehicle_city_id').show();

} else {
    $('#vehicle_city_id').hide();

}