<% content_for :title,@title %>
<div class="row-fluid">
  <div class="span12">
    <div class="page-header">
      <h2><%= t("dealers.index.heading")%></h2>
    </div>
    </div>
    </div>

<div class="row-fluid">
  <div id="search_form" class="span3">
     <%= render 'dealers/partials/search_form' %>
  </div><!--/span-->
  <div id="search_results" class="span9">

    <% if @dealers_count>0 %>
	 <div class="search_preloader"></div>
    <% if @dealers_count>@per %>
    <div class="row-fluid">
     <div class="span12">
      
      <div class="paginator">
      <%= render 'dealers/partials/paginator' %>
      </div>
    </div>
  </div>
<% end %>
      <div class="row-fluid">
        <div class="span8">
          <div class="page_entries_info">
          <%= render 'dealers/partials/page_entries_info' %>
            
          </div>
        </div>
        <div class="span4">
        
        </div>
      </div>
     
      <div id="dealers">
        <%= render 'dealers/partials/dealers',dealers: @dealers %>
      </div>
  
      <% if @dealers_count>4 %>
       <div class="row-fluid">
      <div class="span12">
        <div class="page_entries_info">
           <%= render 'dealers/partials/page_entries_info' %>
        </div>
      </div>
    </div>
	  <% if @dealers_count>@per %>
     <div class="row-fluid">
      <div class="span12">
        <div class="paginator">
         <%= render 'dealers/partials/paginator' %>
        </div>
      </div>
    </div>
	 <% end %>
      <% end %>
    <% else %>

     <div class="alert text-center">
      <%= t("dealers.index.nothing") %>
      </div>
    <% end %>
  </div><!--/span-->
</div><!--/row-->
