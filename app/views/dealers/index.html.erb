<% content_for :title,@title %>
<div class="row-fluid">
  <div class="span12">
    <div class="page-header">
      <h2>Car dealers</h2>
    </div>
    </div>
    </div>

<div class="row-fluid">
  <div id="search_form" class="span3">
     <%= render 'dealers/partials/search_form' %>
  </div><!--/span-->
  <div id="search_results" class="span9">

    <% if @dealers.count>0 %>

    <div class="row-fluid">
     <div class="span12">
       <div class="search_preloader"></div>
      <div class="paginator">
      <%= render 'dealers/partials/paginator' %>
        
      </div>
    </div>
  </div>

      <div class="row-fluid">
        <div class="span8">
          <div class="page_entries_info">
          <%= render 'dealers/partials/page_entries_info' %>
            
          </div>
        </div>
        <div class="span4">
        
        </div>
      </div>
     
      <div id="dealers">
        <%= render 'dealers/partials/dealers',dealers: @dealers %>
      </div>
  
      <% if @dealers.count>4 %>
       <div class="row-fluid">
      <div class="span12">
        <div class="page_entries_info">
           <%= render 'dealers/partials/page_entries_info' %>
        </div>
      </div>
    </div>
     <div class="row-fluid">
      <div class="span12">
        <div class="paginator">
         <%= render 'dealers/partials/paginator' %>
        </div>
      </div>
    </div>
      <% end %>
    <% else %>

     <div class="alert">
      <%= t("adverts.index.nothing") %>
      </div>
    <% end %>
  </div><!--/span-->
</div><!--/row-->
