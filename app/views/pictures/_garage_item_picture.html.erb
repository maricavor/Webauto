<% unless picture.new_record?  %>

    <%= link_to image_tag(picture.file_url(:thumb)), picture.file_url(:original), :class=>"thumbnail" %>

      <div class="actions">
      	<%= link_to "edit", edit_picture_path(picture) %>
        <%= link_to "remove", picture, :confirm => 'Are you sure?', :method => :delete %>
      </div>
   <% else %>
      <%= image_tag "/thumbnail.png",size: "300x200" %>
    <% end %>

