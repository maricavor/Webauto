
   

  <%= f.hidden_field :garage_item,:value=>true %>
   <%= f.hidden_field :type_id,:value=>@type_id %>
    <%= f.collection_select :bodytype_id, @bodytypes, :id, :name,{}, {label: "Body Type:"} %>
    <%= f.text_field :bodytype_details,placeholder: "Add details..."%>
    <%= f.hidden_field :user_id,value: current_user.id %>
    <%= f.select :make_id, @makes.collect {|p| [ p.name, p.id ] },{include_blank: true},{label: "Make:",id: "vehicle_make_id"} %>
    <%= f.select :model_id,[],{},{label: "Model Name:",id: "vehicle_model_id"} %>
    <%= f.text_field :model_spec,id:"model_spec"   %>
    <%= f.text_field :badge,label: "Badge:",id: "vehicle_badge"%>
    <%= f.date_select :registered_at,{order: [:month, :year],start_year: 1900,id:"registered_at"},{label: "Initial Registration:"} %>
    <%= f.text_field :odometer,label: "Odometer:"  %>
    <%= f.select :colour_id,t('colours').collect {|c| [ c["name"], c["id"] ] },{include_blank: true},{label: "Color:"} %>
    <%= f.text_field :specific_colour,label: "Specific Color:" %>
    <%= f.select :drivetype_id, t('drivetypes').collect {|c| [ c["name"], c["id"] ] },{include_blank: true}, {label: "Drive Type:"} %>
    <%= f.text_field :engine_power,label: "Engine power (kW):"  %>
    <%= f.text_field :engine_size,label: "Total displacement (l):" %>
    <%= f.text_field :engine_type,label: "Engine Type:"  %>
    <%= f.select :fueltype_id, t('fueltypes').collect {|c| [ c["name"], c["id"] ] },{include_blank: true}, {label: "Fuel:"} %>
    
    
   
   



